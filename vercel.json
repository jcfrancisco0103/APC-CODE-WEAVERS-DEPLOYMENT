{
  "version": 2,
  "env": {
    "DJANGO_SETTINGS_MODULE": "ecommerce.vercel_settings",
    "VERCEL": "1",
    "PYTHONUNBUFFERED": "1"
  },
  "build": {
    "env": {
      "DJANGO_SETTINGS_MODULE": "ecommerce.vercel_settings",
      "VERCEL": "1",
      "PYTHONUNBUFFERED": "1"
    }
  },
  "builds": [
    {
      "src": "ecommerce/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "ecommerce/wsgi.py"
    }
  ],
  "outputDirectory": "staticfiles_build",
  "installCommand": "pip install -r requirements.txt",
  "buildCommand": "python manage.py collectstatic --noinput && mkdir -p staticfiles_build/media && if [ -d media ]; then cp -r media/* staticfiles_build/media/; fi",
  "devCommand": "python manage.py runserver",
  "framework": null,
  "functions": {
    "ecommerce/wsgi.py": {
      "includeFiles": "**"
    }
  }
}
